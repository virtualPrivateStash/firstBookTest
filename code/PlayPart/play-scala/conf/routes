# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                       controllers.Application.index

# Home page
GET     /index                  controllers.Application.index

# UserPage - first implementation
GET     /userProfile                          controllers.Application.userProfile

# UserPage - first implementation
GET     /editUserProfile                          controllers.Application.editUserProfile

# chatView - first implementation
GET     /chatView                          controllers.Application.chatView

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# chatView - first implementation
GET     /viewUsersPictures                          controllers.Application.viewUsersPictures
